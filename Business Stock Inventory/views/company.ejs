<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Company Dashboard</title>
  <link rel="stylesheet" href="/company.css">
</head>
<body>
  <button id="registrationButton">Add New Branch</button>
  <button id="registrationSupplierButton">Add New Supplier</button>
  <button  id="backButton" name="action" value="back" class="btn_back">Back</button>
  



  <div class="dashboard" id="companydetails">
    <h1>Welcome to Your <%- company %></h1>
    <% if (typeof error !== 'undefined') { %>
      <p class="error"><%- error %></p>
    <% } %>
    <div class="section-links">
      <a href="/company/branch_table">Branches Information</a>
      <form  class="dropdown">
        <select id="branch-select">
          <option value="" disabled selected>Select Branch</option>
          <% for(var i = 0 ; i< branches.length ; i++){ %>
            <option name="dropdown_box_value" value="<%=branches[i][1]%>"> <%= branches[i][0] %> </option>
          <% } %>
        </select>
        <!-- <button id="get-value-button">Get Selected Value</button> -->
        <button type="submit" name="action" value="dropdown_value_submit" class="drop_btn" id="get-value-button">Get Selected Value</button>
      </form>
      <a href="employees.html">Employee Information</a>
      <a href="customers.html">Customer Information</a>
      <a href="suppliers.html">Supplier Information</a>
      <a href="products.html">Product Details</a>
      <!-- Add more links as needed -->
    </div>
  </div>

  <div class="add-branch-container" id="addBranchContainer">
    <!-- Add Branch form title -->
    <h2>Add New Branch</h2>
    
    <!-- Add Branch form -->
    <form method="POST" action="/company" id="addBranchForm">
      <!-- Input for Manager's Username -->
      <div class="form-group">
        <label for="managerUsername">Manager's Username:</label>
        <input type="text" name="managerUsername" id="managerUsername" placeholder="Manager's Username" required>
      </div>
      <!-- Input for Manager's Password -->
      <div class="form-group">
        <label for="managerPassword">Manager's Password:</label>
        <input type="password" name="managerPassword" id="managerPassword" placeholder="Manager's Password" required>
      </div>
      <!-- Input for Manager's Name -->
      <div class="form-group">
        <label for="managerName">Manager's Name:</label>
        <input type="text" name="managerName" id="managerName" placeholder="Manager's Name" required>
      </div>
      <!-- Input for Branch Location -->
      <div class="form-group">
        <label for="branchLocation">Branch Location:</label>
        <input type="text" name="branchLocation" id="branchLocation" placeholder="Branch Location" required>
      </div>
      <!-- Input for Manager's Salary -->
      <div class="form-group">
        <label for="managerSalary">Manager's Salary:</label>
        <input type="number" name="managerSalary" id="managerSalary" placeholder="Manager's Salary" required>
      </div>
      <!-- Add Branch button -->
      <button type="submit" name="action" value="add-branch" class="btn">Add Branch</button>
    </form>
  </div>

  <div class="add-supplier-container" id="addSupplierContainer">
    <!-- Add Branch form title -->
    <h2>Add New Supplier</h2>
    
    <!-- Add Branch form -->
    <form method="POST" action="/company" id="addSupplierForm">
      <!-- Input for Manager's Username -->
      <div class="form-group">
        <label for="supplierUsername">Supplier's Username:</label>
        <input type="text" name="supplierUsername" id="supplierUsername" placeholder="Supplier's Username" required>
      </div>
      <!-- Input for Manager's Password -->
      <div class="form-group">
        <label for="supplierPassword">Supplier's Password:</label>
        <input type="password" name="supplierPassword" id="supplierPassword" placeholder="Supplier's Password" required>
      </div>
      <!-- Input for Manager's Name -->
      <div class="form-group">
        <label for="supplierName">Supplier's Name:</label>
        <input type="text" name="supplierName" id="supplierName" placeholder="Supplier's Name" required>
      </div>
      <!-- Add Branch button -->
      <button type="submit" name="action" value="add-supplier" class="btn">Add Supplier</button>
    </form>
  </div>
  

