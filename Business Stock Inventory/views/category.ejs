          </div>
          <div class="info-item">
            <div class="info-label">company ID: </div>
            <div><%- categorys[i][2] %></div>
          </div>
         
        
      </div>
    <% } %>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const personBoxes = document.querySelectorAll('.person-box');
  
      personBoxes.forEach(box => {
        box.addEventListener('click', async function() {
          console.log("Clicked on person-box");
          const categoryId = box.getAttribute('data-id');

          const response = await fetch('/company/branch/category', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ categoryId }),
          })
          .then(response => response.json())
          .then(data => {
            // Here you can make a decision based on the response data
            if (data.shouldNavigate) {
              // Navigate to another page
              window.location.href = '/company/branch/category/product';
            } else {
              // Do something else
            }
          })
          .catch(error => {
            console.error('Error:', error);
            // Handle errors here
          });
