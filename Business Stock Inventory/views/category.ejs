<body>
  <div class="background-image"></div>
  <header class="header">
    <h1><%- company %></h1>
  </header>
  <div class="container">
    <% for(var i = 0; i < categorys.length; i++) { %>
      <div class="person-box" data-id="<%- categorys[i][0] %>">
        
          <div class="title">Category: <%- categorys[i][0] %> </div>
          <div class="info-item">
            <div class="info-label">branch ID: </div>
            <div><%- categorys[i][1] %></div>
          </div>
          <div class="info-item">
